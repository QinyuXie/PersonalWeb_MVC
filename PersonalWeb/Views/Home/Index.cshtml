@if (Model.eduDetails != null)
{
    <section id="education" class="home-section">
        <div class="container">
            <div class="row">
                <div class="col-left" section-heading">
                    <h1>Education</h1>
                </div>

                <div class="col-right">

                    @foreach (var education in Model.eduDetails)
                    {
                        <tr>
                            <td>
                                 <h3 id="school-name">@education.SchoolName</h3>
                            </td>
                            <td>
                                <a asp-action="Edit" >Edit</a> |
                                <a asp-action="Delete" asp-route-id="@education.EduId">Delete</a>
                            </td>
                            <p><span class="dim">@education.Degree @education.Major</span></p>

                            <p><span class="dim">@education.ReleventCourses</span></p>
                            <td>@education.FromYear</td>
                            <td>@education.FromMonth</td>
                            <td>@education.FromDay</td>
                        </tr>
                    }


                </div>
            </div>

        </div>
    </section>
}


@if (Model.workDetails != null)
{
    <section id="experience" class="home-section">
        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-md-4 section-heading">
                    <h1>Professional Experience</h1>
                </div>

                <div class="col-xs-12 col-md-8">

                    @foreach (var work in Model.workDetails)
                    {

                        <h3 id="school-name">@work.FromMonth @work.FromYear - @work.ToMonth @work.ToYear</h3>

                        <p>@work.Position, @work.Location</p>

                        <ul>
                            @{
                                string[] description = (@work.Responsibility).Split(';');
                            }

                            @foreach (string @des in description)
                            {
                                <li>@des</li>
                            }
                        </ul>

                    }

                </div>
            </div>

        </div>
    </section>
}


